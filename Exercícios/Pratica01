EXERCÍCIO 2

package aula;

public class Principal {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        int i = 1;
        while (i <=5){
            System.out.println(i);
            i++;
        }
    }
    
}

