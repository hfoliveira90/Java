EXERCÍCIO 5

package aula;

public class Principal {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        int soma = 0;
        
        for (int s = 0; s <= 10; s++){
            soma += s;
        }
        
        System.out.println("A soma dos números entre 0 e 10 é: " + soma);
    }
    
}

