EXERCÍCIO 3

package aula;

public class Principal {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        int i = 1;
        do {
            System.out.println(i);
            i++;
        } while (i<=5);
    }
    
}

